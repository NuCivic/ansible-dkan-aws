{
    "push": {
      "name": "",
      "vcs": false,
      "exclude": [".git/*", "*.swp"]
    },
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "provisioners": [{
      "type": "shell",
      "execute_command": "echo 'ubuntu'|sudo -S bash '{{.Path}}'",
      "scripts": [
          "scripts/base.sh",
          "scripts/dep.sh",
          "scripts/ansible.sh"
      ]},
      {
        "type": "ansible-local",
        "playbook_dir": ".",
        "playbook_file": "./playbook.yml"
      },
      {
      "type": "shell",
      "execute_command": "echo 'ubuntu'|sudo -S bash '{{.Path}}'",
      "scripts": [
          "scripts/cleanup.sh",
          "scripts/zerodisk.sh"
      ]
      }],
    "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-1",
      "source_ami": "ami-ee4f77ab",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "nucivic-dkan {{timestamp}}"
    }],
    "post-processors": []
}
